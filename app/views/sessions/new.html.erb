<h1 class="center-title">Login</h1>
<div class='form-for'>
  <%= form_tag '/login' do %>
    <p class='form-label'>Email</p>
    <br />
    <%= text_field_tag :email %>
    <br />
    <p class='form-label'>Password</p>
    <br />
    <%= password_field_tag :password %>
    <br />
    <%= submit_tag "Submit", :class => 'submit-btn' %>
  <% end %>
</div>
